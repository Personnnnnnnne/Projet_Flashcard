<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:text="A propos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/quizLeagueOfLegendsButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/quizLeagueOfLegendsButton"
        app:layout_constraintTop_toBottomOf="@+id/quizHarryPotterButton" />

    <Button
        android:id="@+id/quizLeagueOfLegendsButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:text="League Of Legends"
        app:layout_constraintBottom_toTopOf="@+id/quizHarryPotterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/quizHarryPotterButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:text="Harry Potter"
        app:layout_constraintBottom_toTopOf="@+id/aboutButton"
        app:layout_constraintEnd_toEndOf="@+id/quizLeagueOfLegendsButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/quizLeagueOfLegendsButton"
        app:layout_constraintTop_toBottomOf="@+id/quizLeagueOfLegendsButton" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="406dp"
        android:layout_height="196dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/super_quiz" />

</androidx.constraintlayout.widget.ConstraintLayout>